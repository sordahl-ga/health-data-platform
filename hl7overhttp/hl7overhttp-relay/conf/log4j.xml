<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
    
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%5p [%t] - %m%n"/>
        </layout>
    </appender>
    
    <!--
    Note: Uncomment the following appender to increase the
    logging verbosity to DEBUG level, which will give more
    information about what HoH is doing internally. You
    may further increase by changing DEBUG to TRACE to
    see even more detail.   
    -->
    <!-- 
    <logger name="ca.uhn.hl7v2.hoh" additivity="false">
    	<level value="DEBUG"></level>
    	<appender-ref ref="stdout"/>
    </logger>
    -->
     
    <root>
        <priority value="INFO"></priority>
        <appender-ref ref="stdout"/>
    </root>
</log4j:configuration>